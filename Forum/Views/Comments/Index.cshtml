@model IEnumerable<Forum.Models.Comment>

@{
    ViewData["Title"] = "Index";
}

<h1>View all Comments</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post.PostId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CommentId" class="btn btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@item.CommentId" class="btn btn-light">Details</a>
                <a asp-action="Delete" asp-route-id="@item.CommentId" class=" btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
